<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/arFragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"/>

    <Button  
        android:id="@+id/button_wall"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_above="@+id/scrollView"  
        android:layout_centerHorizontal="true"
        android:text="Place Anyway"
        android:layout_gravity="bottom"
        android:visibility="gone"/>

    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/img1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sofa78" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sofa53" />
        
            <ImageView
                android:id="@+id/img3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sofa54" />
        
            <ImageView
                android:id="@+id/img4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/wardrobe" />
        
            <ImageView
                android:id="@+id/img5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/wardrobe1" />
        
            <ImageView
                android:id="@+id/img6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/wardrobe2" />
        
            <ImageView
                android:id="@+id/img7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sofa1" />
        
            <ImageView
                android:id="@+id/img8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sofa1" />
        
            <ImageView
                android:id="@+id/img9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sofa1" />
        
            <ImageView
                android:id="@+id/img10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sofa1" />
        
            <ImageView
                android:id="@+id/img11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sofa1" />
        
        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>